{
  "config": {
    "manage_containers": true,
    "startup_wait": 5,
    "server": {
      "port": 4000
    },
    "chain": {
      "enabled": true,
      "trail_head_blocks": 0,
      "rpc_url": "http://host.docker.internal:8545",
      "registry_address": "0x663F3ad617193148711d28f5334eE4Ed07016602",
      "wallet": {
        "max_gas_limit": 5000000,
        "private_key": "",
        "payment_address": "",
        "allowed_sim_errors": []
      },
      "snapshot_sync": {
        "sleep": 1.5,
        "batch_size": 50,
        "starting_sub_id": 0
      }
    },
    "redis": {
      "host": "redis",
      "port": 6379
    },
    "forward_stats": false,
    "containers": []
  },
  "inputs": [
    {
      "id": "private_key",
      "path": "chain.wallet.private_key",
      "description": "Private key for the wallet",
      "type": "string",
      "required": false,
      "default": "0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d"
    },
    {
      "id": "payment_address",
      "path": "chain.wallet.payment_address",
      "description": "Payment address for the wallet",
      "type": "string",
      "required": false
    }
  ]
}
