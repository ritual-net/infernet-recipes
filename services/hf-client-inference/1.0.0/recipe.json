{
    "config": {
        "id": "hf-client-inference-1.0.0",
        "image": "ritualnetwork/hf_client_inference_service:1.0.0",
        "description": "HuggingFace Client Inference Service",
        "command": "--bind=0.0.0.0:3000 --workers=${NUM_WORKERS}",
        "env": {}
    },
    "inputs": [
        {
            "id": "HF_TOKEN",
            "path": "env.HF_TOKEN",
            "description": "The Hugging Face API token.",
            "type": "string",
            "required": true
        },
        {
            "id": "NUM_WORKERS",
            "path": "command#NUM_WORKERS",
            "description": "The number of workers to use with the server.",
            "type": "integer",
            "required": false,
            "default": 2
        }
    ]
}
